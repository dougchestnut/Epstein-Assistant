rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in v1/
    match /v1/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
